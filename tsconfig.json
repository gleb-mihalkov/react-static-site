{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
